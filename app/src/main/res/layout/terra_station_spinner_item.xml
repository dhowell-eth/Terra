<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:background="@color/spinnerListBackground">


    <TextView
        android:id="@+id/tv_station_spinner_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="Station "
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintEnd_toStartOf="@+id/tv_category_spinner_item"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_station_spinner_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_station_spinner_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:paddingStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_station_spinner_label"
        app:layout_constraintEnd_toStartOf="@+id/tv_station_spinner_label"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_station_spinner_label"
        app:srcCompat="@drawable/sharp_details_black_24" />

    <TextView
        android:id="@+id/tv_category_spinner_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:paddingEnd="16dp"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_station_spinner_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_station_spinner_label"
        tools:text="1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="2dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_category_spinner_item"
        app:layout_constraintStart_toStartOf="@+id/iv_station_spinner_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_station_spinner_label"
        app:srcCompat="@color/divider" />
</android.support.constraint.ConstraintLayout>